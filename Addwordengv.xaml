        <Label Content="English word" HorizontalAlignment="Left" Margin="158,159,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="224,255,0,0" VerticalAlignment="Top" Width="216" Background="#FF7B90CB" BorderBrush="#FF7B90CB" Foreground="Black" FontSize="20" Click="Button_Click"/>
        <Label Content="Add word" HorizontalAlignment="Left" Margin="287,19,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="erreor" Content="" HorizontalAlignment="Left" Margin="174,213,0,0" VerticalAlignment="Top" Height="39" Width="323" Foreground="Red" FontSize="20"/>
        <Button Content="Settings" HorizontalAlignment="Left" Margin="22,289,0,0" VerticalAlignment="Top" Width="75" Background="#FF3771B9" BorderBrush="#FF3771B9" Foreground="White" Click="Button_Click_2"/>

    </Grid>
</Window>
