            <Button x:Name="_new" Content="New words" HorizontalAlignment="Left" Margin="18,89,0,0" VerticalAlignment="Top" Width="75" Background="#FF3771B9" BorderBrush="#FF3771B9" Foreground="White" Click="_new_Click_1"/>
        </Grid>
        <TextBox x:Name="ukrword" HorizontalAlignment="Left" Height="35" Margin="274,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246" FontSize="20"/>
        <TextBox x:Name="englword" HorizontalAlignment="Left" Height="35" Margin="273,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" FontSize="20"/>
