            <Button x:Name="my" Content="My words" HorizontalAlignment="Left" Margin="17,82,0,0" VerticalAlignment="Top" Width="75" Background="#FF3771B9" BorderBrush="#FF3771B9" Foreground="White" Click="My_Click"/>
