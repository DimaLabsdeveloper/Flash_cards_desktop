        <Button x:Name="next" Content="Next" HorizontalAlignment="Left" Margin="511,319,0,0" VerticalAlignment="Top" Width="75" Background="#FF7B90CB" BorderBrush="#FF7B90CB" Click="Next_Click"/>
        <Button x:Name="home" Content="Home" HorizontalAlignment="Left" Margin="19,33,0,0" VerticalAlignment="Top" Width="75" Click="Home_Click" Foreground="White" BorderBrush="#FF3771B9" Background="#FF3771B9"/>
        <Button x:Name="deleteword" Content="Delete the word" HorizontalAlignment="Left" Margin="399,318,0,0" VerticalAlignment="Top" Width="105" Height="24" Background="#FF7B90CB" BorderBrush="#FF7B90CB" Click="Deleteword_Click"/>

    </Grid>
</Window>
